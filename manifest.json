{
  "manifest_version": 3,
  "name": "Vani - Advanced Voice Assistant",
  "version": "1.0",
  "description": "Intelligent voice assistant with Hinglish support and advanced features",
  "permissions": [
    "activeTab",
    "scripting",
    "tts",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vani Voice Assistant"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}